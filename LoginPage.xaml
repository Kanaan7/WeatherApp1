<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp._1.Views.LoginPage"
             Title="Login"
             BackgroundColor="Violet">

    <StackLayout VerticalOptions="Center"
                 Margin="20"
                 Spacing="0">
        <Image Source="loginimage"
               HeightRequest="200"
               WidthRequest="200"/>
        <Label Text="Weather"
               FontSize="40"
               TextColor="Yellow"/>
        <Label Text="Forcast app"
               FontSize="40"
               TextColor="White"/>
        <Entry Placeholder="Username"
               Keyboard="Text"
               Margin="20,30,20,0"/>
        <Entry Placeholder="Password"
               IsPassword="True"
               Keyboard="Text"
               Margin="20,0,20,30"/>
        <Button Text="Login"
                FontSize="Large"
                Background="yellow"
                WidthRequest="250"
                Margin="0,30,0,0"
                x:Name="BtnLogin"
                Clicked="BtnLogin_Clicked"/>
    </StackLayout>

</ContentPage>